{
  "name": "html-to-pdf",
  "version": "0.0.1",
  "description": "A Node.js service that converts HTML content to PDF using Puppeteer",
  "keywords": [
    "pdf",
    "html",
    "convert",
    "puppeteer",
    "nodejs",
    "api",
    "service",
    "fastify"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/causaly/html-to-pdf.git"
  },
  "author": {
    "name": "Causaly",
    "email": "front-end@causaly.com",
    "url": "https://github.com/causaly"
  },
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && esbuild src/index.ts --bundle --platform=node --packages=external --target=node22 --format=esm --outfile=dist/index.js",
    "start": "node --env-file .env dist/index.js",
    "dev": "NODE_OPTIONS='--experimental-strip-types' node --watch --env-file .env src/index.ts",
    "lint": "eslint --cache --cache-strategy content .",
    "lint:fix": "eslint --cache --cache-strategy content --fix .",
    "format": "prettier --write --config .prettierrc.json --ignore-unknown --cache --cache-strategy content .",
    "format:check": "prettier --check --config .prettierrc.json --ignore-unknown .",
    "postinstall": "npx puppeteer browsers install chrome",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write --config ./.prettierrc.json"
    ]
  },
  "dependencies": {
    "axios": "^1.9.0",
    "fastify": "^5.4.0",
    "fp-ts": "^2.16.10",
    "pino": "^8.21.0",
    "pino-cloud-logging": "^1.0.6",
    "pino-pretty": "^13.0.0",
    "puppeteer": "^24.10.0",
    "rollbar": "^2.26.4",
    "sanitize-html": "^2.17.0",
    "zod": "^3.25.56",
    "zod-validation-error": "^3.5.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.28.0",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-yml": "^1.18.0",
    "globals": "^16.2.0",
    "jest-fp-ts-matchers": "^0.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3",
    "yaml-eslint-parser": "^1.3.0"
  }
}
